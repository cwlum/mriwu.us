<%- include('partials/header', { title: 'Edit Portfolio Item' }) %>

<div class="card" style="max-width: 800px; margin: auto;">
    <h5 class="card-title">Edit: <%= item.title %></h5>

    <form action="/admin/portfolio/edit/<%= item.id %>" method="POST" enctype="multipart/form-data">
        <div class="form-group">
            <label for="title">Title</label>
            <input type="text" id="title" name="title" class="form-control" value="<%= item.title %>" required>
        </div>
        <div class="form-group">
            <label for="category">Category</label>
            <input type="text" id="category" name="category" class="form-control" value="<%= item.category %>" required>
        </div>
        <div class="form-group">
            <label for="description">Description</label>
            <textarea id="description" name="description" class="form-control" rows="5"><%= item.description %></textarea>
        </div>
        <div class="form-group">
            <label>Current Image</label>
            <div>
                <img src="/<%= item.src %>" alt="<%= item.title %>" style="width: 150px; height: auto; border-radius: 8px; margin-bottom: 10px;">
                <input type="hidden" name="existingImage" value="<%= item.src %>">
            </div>
        </div>
        <div class="form-group">
            <label for="image">Upload New Image (optional, will replace the current one)</label>
            <input type="file" id="image" name="image" class="form-control" accept="image/webp">
        </div>
        <div style="margin-top: 20px;">
            <button type="submit" class="btn btn-primary">Update Item</button>
            <a href="/admin/portfolio" class="btn" style="margin-left: 10px;">Cancel</a>
        </div>
    </form>
</div>

<%- include('partials/footer') %>
